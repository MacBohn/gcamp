<div class= "container">
<div class= "page-header">
  <%= link_to 'Create Task', new_task_path, class: "pull-right btn btn-primary"%>
  <h2>Tasks</h2>
</div>



<table class ="table">



  <tbody>


  <th>Description</th> <th>Complete</th>
    <% @tasks.each do |task| %>
<tr>
<td width="100%"> <%= task.description %></td><td><%= task.complete %> </td>

    <td><%= link_to 'Show',task, class: "pull-right btn btn-success" %></td>

       <!-- <td align="left"><button class="btn btn-small btn-success" type="button"><%= link_to 'Show', task %></button></td> -->
      <td><%= link_to 'Edit',edit_task_path(task), class: "pull-right btn btn-info" %></td>

       <!-- <td align="center"><button class="btn btn-small btn-info" type="button"><%= link_to 'Edit', edit_task_path(task) %></button></td> -->
       <td><%= link_to 'Destroy',task, method: :delete, data: { confirm: 'Are you sure?' }, class: "pull-right btn btn-danger" %></td>
       <!-- <td align="right"><button class="btn btn-small btn-danger" type="button"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></button></td> -->
</tr>
    <% end %>
  </tbody>
</table>
<br>
</div>
</div>
