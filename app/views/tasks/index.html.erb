<h1>Tasks</h1>
  <div class="container">
    <div class= "text-right">
<td align="right"><button class="btn btn-small btn-info" type="button"><%= link_to 'New Task', new_task_path %></button></td>
</div>
</div>



      <th colspan="3"></th>


  <tbody>

    <th> Description </th>        <th> Complete </th>
    <table>


    <% @tasks.each do |task| %>
<tr>
      <td width="100%"> <%= task.description %><%= task.complete %> </td>

       <td align="left"><button class="btn btn-small btn-info" type="button"><%= link_to 'Show', task %></button></td>

       <td align="center"><button class="btn btn-small btn-success" type="button"><%= link_to 'Edit', edit_task_path(task) %></button></td>

       <td align="right"><button class="btn btn-small btn-danger" type="button"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
</tr>
    <% end %>
  </tbody>
</table>
<br>
