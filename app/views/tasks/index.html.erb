
<h1>Tasks</h1>

    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>


  <tbody>
    <table>

    <% @tasks.each do |task| %>

      <tr>

       <td width="100%"><%= task.description %></td>

       <td align="left"><button class="btn btn-small btn-danger" type="button"><%= link_to 'Show', task %></button></td>

       <td align="center"><button class="btn btn-small btn-warning" type="button"><%= link_to 'Edit', edit_task_path(task) %></button></td>

       <td align="right"><button class="btn btn-small btn-success" type="button"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>

    <% end %>

  </tr>
  </tbody>
</table>
<br>
<tr>
<td align="left"><button class="btn btn-small btn-info" type="button"><%= link_to 'New Task', new_task_path %></button></td>
</tr>
