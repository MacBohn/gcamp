<!DOCTYPE html>
<html>
<div class="container">


  <title> gCamp </title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta charset= utf-8>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <body>



    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <%= link_to "gCamp", projects_path, class: "navbar-brand" %>
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              My Projects
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><a href>Action</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <li class="divider"></li>
              <li><%= link_to "New Project", new_project_path %></li>
            </ul>
          </li>
        </ul>

        <ul class= "navbar-nav navbar-right nav">
          <% if current_user %>
          <li><%= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(session[:user_id]) %></li>
          <li><%= link_to "Sign Out", signout_path %></li>
          <% else %>
          <li><%= link_to "Sign Up", signup_path %></li>
          <li><%= link_to "Sign In", signin_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>


    <br>
    <div class= "container">
      <% if notice != nil %>
      <div class="text-center alert alert-info">
        <%= notice %>
      </div>
      <% end %>
      <%= yield %>
    </div>
    <br>
  </div>
  <footer class="panel container">
    <div class="text-center">
      <p><%= link_to 'Home', root_path %> |
        <%= link_to 'About', about_path %> |
        <%= link_to 'Terms', terms_path %> |
        <%= link_to 'FAQ', faq_path %></p>
        &copy; Mega Mac Company
      </div>
      <div class="col-md-offset-8">
        <%= link_to "http://www.linkedin.com/profile/view?id=375932840&trk=nav_responsive_tab_profile" do %>
        <%= image_tag "linked-in.png", width: "20"%>
        |<% end %>
        <%= link_to "https://twitter.com/BohnMccartney" do %>
        <%= image_tag "Twitter_logo.png", width: "20"%>
        |<% end %>
        <%= link_to "https://github.com/MacBohn" do %>
        <%= image_tag "git_hub.png", width: "20"%>
        |<% end %>
        <%= link_to "http://www.galvanize.it/school#main" do %>
        <%= image_tag"gschool.jpeg", width: "30"%>
        <% end %>
      </div>
    </footer>

  </body>

  </html>
