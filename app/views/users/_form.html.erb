<%= form_for(@user) do |f| %>

<div class="form-group row">
   <div class="field">
     <%= f.label :first_name %><br>
     <%= f.text_field :first_name %>
   </div>
 </div>
<div class="form-group row">
   <div class="field">
     <%= f.label :last_name %><br>
     <%= f.text_field :last_name %>
   </div>
 </div>
     <div class="form-group row">
        <div class="field">
          <%= f.label :email %><br>
          <%= f.text_field :email %>
        </div>
      </div>
            <div class="actions">
              <%= f.submit class: "btn btn-primary"%>
            </div>
 <% end %>
