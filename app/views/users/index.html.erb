<div class= "page-header">
  <div class= "pull-right">
    <%= link_to 'Create Users', new_user_path, class: "btn btn-primary" %>
  </div>
  <h1> Users </h1>
</div>

<table class ="table">
  <thead>
    <th>Name</th><th>Email</th><th></th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to "#{user.first_name} #{user.last_name}", user_path(user) %></td>
      <% if current_user == user %>
      <td><%= mail_to user.email %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <% else %>
      <td></td>
        <td></td>
      <% end %>
      <tr>
        <% end %>
      </table>
    </div>
